{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "types": ["node", "@playwright/test"],
    "typeRoots": ["./types", "../node_modules/@types"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "strict": false,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["**/*.ts", "types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
